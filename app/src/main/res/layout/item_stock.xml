<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/recycler_item_selector"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stockIconImageView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/stock_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/symbolTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Symbol"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fullNameTextView"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Full Company Name"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dailyChangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Daily Change"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/removeStockButton"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="2dp"
            android:text="DEL"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />
</LinearLayout>
